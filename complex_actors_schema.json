{
    "add-field-type" : [
        {
            "name": "NameTextField",
            "class" : "solr.TextField",
            "indexAnalyzer":{
                "tokenizer":{
                    "class":"solr.StandardTokenizerFactory"
                },
                "filters":[
                    {"class":"solr.ASCIIFoldingFilterFactory", "preserveOriginal":true},
                    {"class":"solr.LowerCaseFilterFactory"}
                ]
            },
            "queryAnalyzer":{
                "tokenizer":{
                    "class":"solr.StandardTokenizerFactory"
                },
                "filters":[
                    {"class":"solr.ASCIIFoldingFilterFactory", "preserveOriginal":true},
                    {"class":"solr.LowerCaseFilterFactory"}
                ]
            }
        },
        {
            "name":"SynonymsNameTextField",
            "class":"solr.TextField",
            "indexAnalyzer":{
                "tokenizer":{
                    "class":"solr.StandardTokenizerFactory"
                },
                "filters":[
                    {"class":"solr.SynonymGraphFilterFactory",  "ignoreCase":"true", "synonyms":"namesynonyms.txt", "expand":"false"},
                    {"class":"solr.FlattenGraphFilterFactory"},
                    {"class":"solr.ASCIIFoldingFilterFactory", "preserveOriginal":true},
                    {"class":"solr.LowerCaseFilterFactory"}
                ]
            },
            "queryAnalyzer":{
                "tokenizer":{
                    "class":"solr.StandardTokenizerFactory"
                },
                "filters":[
                    {"class":"solr.ASCIIFoldingFilterFactory", "preserveOriginal":true},
                    {"class":"solr.LowerCaseFilterFactory"}
                ]
            }
        },
        {
            "name": "PhoneticNameTextField",
            "class" : "solr.TextField",
            "indexAnalyzer":{
                "tokenizer":{
                    "class":"solr.StandardTokenizerFactory"
                },
                "filters":[
                    {"class":"solr.BeiderMorseFilterFactory", "nameType":"GENERIC", "ruleType":"APPROX", "concat":"true", "languageSet":"auto"}
                ]
            },
            "queryAnalyzer":{
                "tokenizer":{
                    "class":"solr.StandardTokenizerFactory"
                },
                "filters":[
                    {"class":"solr.BeiderMorseFilterFactory", "nameType":"GENERIC", "ruleType":"APPROX", "concat":"true", "languageSet":"auto"}
                ]
            }
        },
        {
            "name": "movieTitle",
            "class": "solr.TextField",
            "indexAnalyzer":{
                "tokenizer":{
                    "class":"solr.StandardTokenizerFactory"
                },
                "filters":[
                    {"class":"solr.ASCIIFoldingFilterFactory", "preserveOriginal":true},
                    {"class":"solr.LowerCaseFilterFactory"}
                ]
            },
            "queryAnalyzer":{
                "tokenizer":{
                    "class":"solr.StandardTokenizerFactory"
                },
                "filters":[
                    {"class":"solr.ASCIIFoldingFilterFactory", "preserveOriginal":true},
                    {"class":"solr.LowerCaseFilterFactory"}
                ]
            }
        }

    ],
    "add-field": [
        {
            "name": "name",
            "type": "NameTextField",
            "indexed": true,
            "stored": true,
            "multiValued": false,
            "required": true
        },
        {
            "name": "name_synonyms",
            "type": "SynonymsNameTextField",
            "indexed": true,
            "stored": false,
            "multiValued": true
        },
        {
            "name": "name_phonetic",
            "type": "PhoneticNameTextField",
            "indexed": true,
            "stored": false,
            "multiValued": false
        },
        {
            "name": "characters",
            "type": "NameTextField",
            "multiValued": true,
            "indexed": true,
            "required": false,
            "stored": true
        },
        {
            "name": "movies",
            "type": "movieTitle",
            "multiValued": true,
            "indexed": true,
            "required": false,
            "stored": true  
        },
        {
            "name": "related_actors",
            "type": "NameTextField",
            "multiValued": true,
            "indexed": true,
            "required": false,
            "stored": true
        }
    ],

    "add-copy-field": [
        {
            "source": "name",
            "dest": "name_phonetic"
        },
        {
            "source": "name",
            "dest": "name_synonyms"
        }
    ]
}